{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended", "tslint-config-prettier"
    ],
    "linterOptions": {
        "exclude": [
            "config/**/*.js",
            "node_modules/**/*.ts"
        ]
    },
    "jsRules": {},
    "rules": {
        "interface-name": ["never-prefix"],
        "semicolon": [true, "never"],
        "member-access": [
            false
        ],
        "ordered-imports": [
            false
        ],
        "no-console": [
            false
        ],
        "quotemark": [true, "single", "jsx-single"],
        "no-shadowed-variable": false,
        "object-literal-sort-keys": false,
        "jsx-self-close": true,
        "no-var-requires": false
    },
    "rulesDirectory": []
}